<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
       	android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:onClick="onCellClick"
        android:orientation="vertical"
        android:background="@drawable/selector_calendar_normal" 
        xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/txtCellGregorian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingLeft="5dip"
            android:text="@string/demo"
            android:textColor="@color/color_calendar_normal_gregorian"
            android:textSize="12sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgCellHint"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_margin="1dip"
            android:contentDescription="@string/desc_cell_hint" />

        <ImageView
            android:id="@+id/calendar_day_cell_clock"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_gravity="right"/>

    </FrameLayout>

    <TextView
        android:id="@+id/txtCellLunar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:textSize="12sp"
        android:paddingBottom="2dip"
        android:textColor="@color/color_calendar_normal_lunar"
        android:text="@string/demo" />

</LinearLayout>