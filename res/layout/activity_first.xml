<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/first_background"
    android:orientation="vertical" 
    android:id="@+id/first_main_layout">

   

    <LinearLayout
        android:id="@+id/first_LR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <TextView
            android:gravity="center"
            android:id="@+id/first_register"
            android:layout_width="270dp"
            android:layout_height="38dip"
            android:background="@color/royalblue"
            android:textColor="@color/white"
            android:text="注册"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/first_login"
            android:layout_width="270dp"
            android:layout_height="38dip"
            android:background="@color/royalblue"
            android:gravity="center"
            android:text="登陆"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white" />

    </LinearLayout>
     <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_above="@id/first_LR" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_launcher"
                android:layout_marginBottom="10dip" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="37dip"
                android:text="管理活动更给力"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="13dip" />

        </LinearLayout>

    </RelativeLayout>

     <TextView
         android:id="@+id/first_offline"
         android:layout_width="270dp"
         android:layout_height="38dip"
         android:layout_alignLeft="@+id/first_LR"
         android:layout_below="@+id/first_LR"
         android:layout_marginTop="29dp"
         android:background="@color/royalblue"
         android:gravity="center"
         android:text="离线管理"
         android:textAppearance="?android:attr/textAppearanceLarge"
         android:textColor="@color/white" />

</RelativeLayout>